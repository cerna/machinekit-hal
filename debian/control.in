    dh-cmake,
    dh-cmake-compat (= 1),
    dh-sequence-cpack,
    debhelper-compat (= 12),
    debhelper (>= 10),
    autoconf (>= 2.63),
    autoconf-archive,
    dpkg-sig:native,
    git,
    lsb-release,
    libmodbus-dev (>= 3.0),
    libudev-dev,
    libglib2.0-dev,
    libgtk2.0-dev,
    libusb-1.0-0-dev,
    python3:native,
    libpython3-dev,
    cython3:native,
    dh-python,
    pkg-config,
    psmisc,
    libboost-dev,
    libzmq3-dev,
    libczmq-dev (>= 4.0.2),
    libjansson-dev (>= 2.5),
    libwebsockets-dev (>= 1.2.2),
    python3-zmq:native,
    procps,
    liburiparser-dev,
    libssl-dev,
    python3-setuptools,
    uuid-dev,
    uuid-runtime,
    libavahi-client-dev,
    libcmocka-dev,
    libprotobuf-dev (>= 2.4.1),
    protobuf-compiler (>= 2.4.1),
    python3-protobuf:native,
    libprotoc-dev:native (>= 2.4.1),
    python3-simplejson:native,
    python3-sh:native,
    python3-pytest:native,
    libcgroup-dev,
    yapps2:native,
    python3-yapps:native,
    python3-pyftpdlib:native,
    python3-pip:native,
    python3-venv:native,
    libck-dev @BUILDTIME_DEPENDENCIES@
